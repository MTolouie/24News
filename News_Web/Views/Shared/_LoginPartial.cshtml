@using Microsoft.AspNetCore.Identity
@using News_Common
@using News_Business.Repository.IRepository

@inject SignInManager<IdentityUser> signInManager
@inject UserManager<IdentityUser> UserManager


@if (signInManager.IsSignedIn(User))
{
      
    if (User.IsInRole(SD.Role_Admin))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-page="/Admin/Dashboard">Dashboard</a>
        </li>
    }
    if (User.IsInRole(SD.Role_Journalist))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-page="/Journalist/Dashboard">Dashboard</a>
        </li>
    }
    if (User.IsInRole(SD.Role_User))
    {
        
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">Settings</a>
        </li>
       
    }
    <li class="nav-item">
        @*<form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>*@
        <a asp-area="Identity" asp-page="/Account/Logout" class="nav-link btn btn-link text-dark">Logout</a>
    </li>
  
         
      
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}

