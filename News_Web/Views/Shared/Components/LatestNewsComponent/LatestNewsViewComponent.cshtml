@model IEnumerable<News_Models.ViewModels.NewsForIndexViewModel>
@using News_Web.Utilities
@using AngleSharp.Common

<div class="container-fluid">
    <div class="blog-title-span">
        <span class="title">Latest News</span>
    </div>


    @if (Model.Any())
    {
        foreach (var item in Model)
        {
           <div class="col-md-3">
            <partial name="_NewsBox" model="item" />
            </div>
        }
    }
    else
    {
        <div class="alert alert-danger text-center" style="margin-top:10px;">
            <h2>No News</h2>
        </div>
    }
</div>




