@page
@model News_Web.Pages.Journalist.News.ShowMessageModel
@{
    Layout = null;
}
@if (Model.Pending.Message != null)
{
    <div class="alert alert-secondary shadow-lg">
        @Html.Raw(Model.Pending.Message)
    </div>
}
else
{
    <div class="alert alert-danger text-center">
        No Message
    </div>
}
<div class="left mt-4 mb-2">
    <a class="btn btn-outline-danger btn-block" onclick="$('#MyModal').modal('hide');">Close</a>
</div>